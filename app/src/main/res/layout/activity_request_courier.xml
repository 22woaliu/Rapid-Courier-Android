<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header / Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:elevation="2dp">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#545F71" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Dashboard"
            android:textSize="16sp"
            android:textColor="#545F71"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:radius="16dp"
            android:elevation="4dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Title Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">
                    
                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="#E3F2FD"
                        android:text="ðŸ“¦"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create a Courier Request"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1C1E"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>

                <!-- Pickup Address -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Pickup Address"
                    android:textSize="14sp"
                    android:textColor="#545F71"
                    android:layout_marginBottom="8dp"/>
                
                <EditText
                    android:id="@+id/pickup_address_input"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@android:drawable/edit_text"
                    android:hint="Enter pickup location"
                    android:inputType="textPostalAddress"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Delivery Address -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Delivery Address"
                    android:textSize="14sp"
                    android:textColor="#545F71"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/delivery_address_input"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@android:drawable/edit_text"
                    android:hint="Enter delivery destination"
                    android:inputType="textPostalAddress"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Sender Phone -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ž Sender Phone Number"
                    android:textSize="14sp"
                    android:textColor="#545F71"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/sender_phone_input"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@android:drawable/edit_text"
                    android:hint="+1234567890"
                    android:inputType="phone"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Receiver Phone -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ž Receiver Phone Number"
                    android:textSize="14sp"
                    android:textColor="#545F71"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/receiver_phone_input"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@android:drawable/edit_text"
                    android:hint="+0987654321"
                    android:inputType="phone"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Package Weight -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¦ Package Weight"
                    android:textSize="14sp"
                    android:textColor="#545F71"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/package_weight_input"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@android:drawable/edit_text"
                    android:hint="e.g. 2.5kg"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Package Description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¦ Package Description"
                    android:textSize="14sp"
                    android:textColor="#545F71"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/package_description_input"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@android:drawable/edit_text"
                    android:hint="e.g. Documents, Electronics"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginBottom="32dp"/>

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/cancel_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cancel"
                        android:backgroundTint="@android:color/white"
                        android:textColor="#545F71"
                        android:layout_marginEnd="8dp"
                        style="?attr/materialButtonOutlinedStyle"/>

                    <Button
                        android:id="@+id/confirm_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Confirm\nRequest"
                        android:backgroundTint="#2E5C9A"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </ScrollView>
</LinearLayout>
