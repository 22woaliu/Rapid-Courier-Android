<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">

    <!-- Header / Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#FAFAFA">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#545F71" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Orders"
            android:textSize="16sp"
            android:textColor="#545F71"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Title & Date -->
            <TextView
                android:id="@+id/details_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order #ORD001"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A1C1E"
                android:layout_marginBottom="4dp"/>

            <TextView
                 android:id="@+id/details_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created on 12/5/2025 at 8:00 AM"
                android:textSize="14sp"
                android:textColor="#545F71"
                android:layout_marginBottom="24dp"/>

            <!-- ADDRESSES CARD (Blue) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#EAF2FF"
                app:strokeColor="#D3E3FD"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“ Route Information"
                            android:textColor="#2E5C9A"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pickup Address"
                        android:textSize="12sp"
                        android:textColor="#545F71"
                        android:layout_marginTop="4dp"/>
                    <TextView
                        android:id="@+id/details_pickup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123 Main St"
                        android:textSize="14sp"
                        android:textColor="#1F1F1F"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Address"
                        android:textSize="12sp"
                        android:textColor="#545F71"
                        android:layout_marginTop="4dp"/>
                    <TextView
                        android:id="@+id/details_delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="456 Elm St"
                        android:textSize="14sp"
                        android:textColor="#1F1F1F"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CONTACT CARD (Green) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#E8F5E9"
                app:strokeColor="#C8E6C9"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ž Contact Information"
                        android:textColor="#1B5E20"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sender Phone"
                        android:textSize="12sp"
                        android:textColor="#545F71"
                        android:layout_marginTop="4dp"/>
                    <TextView
                        android:id="@+id/details_sender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+123456789"
                        android:textSize="14sp"
                        android:textColor="#1F1F1F"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Receiver Phone"
                        android:textSize="12sp"
                        android:textColor="#545F71"
                        android:layout_marginTop="4dp"/>
                    <TextView
                        android:id="@+id/details_receiver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+098765432"
                        android:textSize="14sp"
                        android:textColor="#1F1F1F"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- PACKAGE CARD (Purple) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F3E5F5"
                app:strokeColor="#E1BEE7"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“¦ Package Information"
                        android:textColor="#4A148C"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight"
                        android:textSize="12sp"
                        android:textColor="#545F71"
                        android:layout_marginTop="4dp"/>
                    <TextView
                        android:id="@+id/details_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.5kg"
                        android:textSize="14sp"
                        android:textColor="#1F1F1F"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="12sp"
                        android:textColor="#545F71"
                        android:layout_marginTop="4dp"/>
                    <TextView
                        android:id="@+id/details_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Documents"
                        android:textSize="14sp"
                        android:textColor="#1F1F1F"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- UPDATE STATUS CARD (Orange) -->
             <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFF8E1"
                app:strokeColor="#FFECB3"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”„ Update Order Status"
                        android:textColor="#F57C00"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Status"
                        android:textSize="12sp"
                        android:textColor="#545F71"
                        android:layout_marginBottom="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Spinner Container Style -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_border_orange"
                            android:padding="4dp"
                            android:layout_marginEnd="16dp">
                            
                            <Spinner
                                android:id="@+id/status_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="48dp"
                                android:spinnerMode="dropdown"/>
                        </FrameLayout>

                        <Button
                            android:id="@+id/btn_update_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Update"
                            android:backgroundTint="#CFD8DC"
                            android:textColor="#263238"
                            android:paddingHorizontal="24dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
