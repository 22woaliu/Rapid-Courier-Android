<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/bg_light_blue">

    <!-- Back Button -->
    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â† Back"
        android:backgroundTint="@android:color/transparent"
        android:textColor="@color/text_primary" />

    <!-- Content Card -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up to get started"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="24dp" />

            <!-- User Type Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Type *"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- User Type Spinner -->
            <Spinner
                android:id="@+id/user_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp" />

            <!-- Full Name Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name *"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- Full Name Field -->
            <EditText
                android:id="@+id/fullname_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="John Doe"
                android:padding="12dp"
                android:background="@drawable/edit_text_bg"
                android:inputType="text"
                android:layout_marginBottom="20dp" />

            <!-- Phone Number Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number *"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- Phone Number Field -->
            <EditText
                android:id="@+id/phone_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="+1234567890"
                android:padding="12dp"
                android:background="@drawable/edit_text_bg"
                android:inputType="phone"
                android:layout_marginBottom="20dp" />

            <!-- Address Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address *"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- Address Field -->
            <EditText
                android:id="@+id/address_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="123 Main St, City, State"
                android:padding="12dp"
                android:background="@drawable/edit_text_bg"
                android:inputType="text"
                android:layout_marginBottom="20dp" />

            <!-- Rider Token Label -->
            <TextView
                android:id="@+id/rider_token_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rider Token *"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <!-- Rider Token Field -->
            <EditText
                android:id="@+id/rider_token_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter your rider token"
                android:padding="12dp"
                android:background="@drawable/edit_text_bg"
                android:inputType="text"
                android:layout_marginBottom="20dp"
                android:visibility="gone" />

            <!-- Password Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password *"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- Password Field -->
            <EditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter password (min 6 character)"
                android:padding="12dp"
                android:background="@drawable/edit_text_bg"
                android:inputType="textPassword"
                android:layout_marginBottom="20dp" />

            <!-- Confirm Password Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password *"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- Confirm Password Field -->
            <EditText
                android:id="@+id/confirm_password_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Re-enter password"
                android:padding="12dp"
                android:background="@drawable/edit_text_bg"
                android:inputType="textPassword"
                android:layout_marginBottom="24dp" />

            <!-- Sign Up Button -->
            <Button
                android:id="@+id/signup_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Sign Up"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="#4CAF50"
                android:layout_marginBottom="16dp" />

            <!-- Login Link -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? "
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <Button
                    android:id="@+id/login_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login here"
                    android:backgroundTint="@android:color/transparent"
                    android:textColor="#2196F3"
                    android:textSize="12sp"
                    android:padding="0dp"
                    android:minHeight="0dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
