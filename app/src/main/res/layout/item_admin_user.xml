<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:minHeight="60dp">

        <!-- Name Column (Fixed width or weight, need to ensure alignment with Header) -->
        <!-- Using fixed widths is easier for simple tables inside ScrollViews -->
        
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <!-- Avatar Placeholder logic handled in code or drawables, using simple icon for now -->
            <ImageView
                android:id="@+id/user_avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/rounded_border_orange" 
                android:src="@android:drawable/ic_menu_myplaces"
                android:padding="6dp"
                android:backgroundTint="#E3F2FD"
                android:tint="#1976D2"
                android:layout_marginEnd="12dp"/>
                
            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textColor="#1F1F1F"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Phone Column -->
        <TextView
            android:id="@+id/user_phone"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="+1234567890"
            android:textColor="#1F1F1F"
            android:textSize="14sp"/>

        <!-- Address Column -->
        <TextView
            android:id="@+id/user_address"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="123 Main St, Downtown"
            android:textColor="#1F1F1F"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"/>

        <!-- Role Column -->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            
            <TextView
                android:id="@+id/user_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client"
                android:textSize="12sp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/rounded_border_orange"
                android:textColor="#1565C0"
                android:backgroundTint="#E3F2FD"/>
        </LinearLayout>
        
        <!-- User ID Column -->
        <TextView
            android:id="@+id/user_id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="user1"
            android:textColor="#757575"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#EEEEEE"
            android:layout_marginHorizontal="8dp"/>

        <!-- Delete Action -->
        <ImageButton
            android:id="@+id/btn_delete_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#D32F2F"
            android:contentDescription="Delete User"
            android:padding="8dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE" />
</LinearLayout>
