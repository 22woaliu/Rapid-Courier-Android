<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:radius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Section: Icon, ID/Time, Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top"
            android:layout_marginBottom="16dp">
            
            <!-- Green Box Icon -->
            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#E8F5E9"
                android:gravity="center"
                android:text="ðŸ“¦"
                android:textSize="24sp"
                android:textColor="#2E7D32"/>
                
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">
                
                <TextView
                    android:id="@+id/order_id_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order #ORD001"
                    android:textStyle="bold"
                    android:textColor="#1A1C1E"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/order_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/5/2025 at 8:00 AM"
                    android:textColor="#545F71"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
            
            <!-- Status Badge -->
            <TextView
                android:id="@+id/status_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Picked"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:background="#D1E4FA"
                android:textColor="#2E5C9A"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Locations -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">
            
            <!-- Pickup -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“"
                    android:textSize="12sp"
                    android:textColor="#4CAF50"/> <!-- Green Pin -->
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pickup"
                        android:textSize="11sp"
                        android:textColor="#757575"/>
                    <TextView
                        android:id="@+id/pickup_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123 Main St, Downtown"
                        android:textSize="13sp"
                        android:textColor="#1F1F1F"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Delivery -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“"
                    android:textSize="12sp"
                    android:textColor="#F44336"/> <!-- Red/Orange Pin -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery"
                        android:textSize="11sp"
                        android:textColor="#757575"/>
                    <TextView
                        android:id="@+id/delivery_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="456 Oak Ave, Uptown"
                        android:textSize="13sp"
                        android:textColor="#1F1F1F"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Footer: Weight & Description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“¦"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"/>
             
             <TextView
                 android:id="@+id/weight_text"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="2.5kg"
                 android:textStyle="bold"
                 android:textSize="13sp"
                 android:textColor="#1F1F1F"
                 android:layout_marginEnd="16dp"/>

             <TextView
                 android:id="@+id/desc_text"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Documents"
                 android:textSize="13sp"
                 android:textColor="#545F71"
                 android:maxLines="1"
                 android:ellipsize="end"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
